<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board.answer.AnswerDao">
	<insert id="insertOfAnswer" parameterType="adto">
		insert into boardanswer (num,nickname,pass,content,writeday) values (#{num},#{nickname},#{pass},#{content},now())
	</insert>
	<select id="getAllDatasOfAnswer" parameterType="int" resultType="adto">
		select * from boardanswer where num=#{num} order by idx 
	</select>
	
</mapper>