<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
	
	<bean id="my" class="spring.ex2.di.MyInfo">
		<constructor-arg value="김미라"/>
		<constructor-arg value="24"/>
		<constructor-arg>
			<value>서울시 강남구 역삼동 쌍용센터</value>
		</constructor-arg>
	</bean>
	<bean id="person" class="spring.ex2.di.Person">
		<!-- MyInfo 생성자 주입 한거 xml에서 명시해야함_위에꺼 ref받으면 된다!! -->
		<constructor-arg ref="my"/>
		<!-- 학교명은 setter 주입하면 됨 -->
		<property name="schoolName" value="쌍용고등학교"/>
	</bean>

</beans>
