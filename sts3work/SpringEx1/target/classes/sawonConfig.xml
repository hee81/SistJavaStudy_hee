<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
	
	<!-- SawonData설정...사원명은 생성자주입..급여,입사일은 setter주입 -->
	<bean id="sdata" class="spring.ex3.di.SawonData">
		<constructor-arg value="홍길동"/>
		<property name="pay" value="2500000"/>
		<property name="ipsaday">
			<value>25-10-22</value>
		</property>
	</bean>
	
	<!-- Sawon SawonData 주입받기 -->
	<bean id="sawon" class="spring.ex3.di.Sawon">
		<constructor-arg ref="sdata"/>
	</bean>
	
	
	
	<!-- 2번째_SawonData설정...사원명은 생성자주입..급여,입사일은 setter주입 -->
	<bean id="sdata2" class="spring.ex3.di.SawonData">
		<constructor-arg value="이효리"/>
		<property name="pay" value="3500000"/>
		<property name="ipsaday">
			<value>26-10-22</value>
		</property>
	</bean>
	
	<!-- Sawon SawonData 주입받기 -->
	<bean id="sawon2" class="spring.ex3.di.Sawon">
		<constructor-arg ref="sdata2"/>
	</bean>

</beans>
