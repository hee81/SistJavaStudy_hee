<head>
  <meta charset="UTF-8">
  <title>별점 테스트</title>

  <!-- FontAwesome 불러오기 (별 아이콘용) -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
    .stars {
      display: flex;
      flex-direction: row;
    }
    .star {
      position: relative;
      width: 30px;
      height: 30px;
      cursor: pointer;
    }
    .star i {
      position: absolute;
      top: 0;
      left: 0;
      font-size: 30px;
      color: #ddd;
    }
    .star i.on {
      color: gold;
    }
  </style>
</head>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const stars = document.querySelectorAll('.star i');
  const scoreInput = document.getElementById('score');
  const scoreText = document.getElementById('scoreText');

  stars.forEach(star => {
    star.addEventListener('click', function() {
      const score = this.getAttribute('data-score');
      scoreInput.value = score;
      scoreText.textContent = score + '점';

      stars.forEach(s => s.classList.remove('on'));
      stars.forEach(s => {
        if (parseFloat(s.getAttribute('data-score')) <= parseFloat(score)) {
          s.classList.add('on');
        }
      });
    });
  });
});
</script>

<body>
  <div id="starWrap" class="stars" data-score="0">
    <!-- 별 구조 -->
    <span class="star" data-value="1">
      <i class="fa fa-star left" data-score="0.5"></i>
      <i class="fa fa-star right" data-score="1.0"></i>
    </span>
    <span class="star" data-value="2">
      <i class="fa fa-star left" data-score="1.5"></i>
      <i class="fa fa-star right" data-score="2.0"></i>
    </span>
    <span class="star" data-value="3">
      <i class="fa fa-star left" data-score="2.5"></i>
      <i class="fa fa-star right" data-score="3.0"></i>
    </span>
    <span class="star" data-value="4">
      <i class="fa fa-star left" data-score="3.5"></i>
      <i class="fa fa-star right" data-score="4.0"></i>
    </span>
    <span class="star" data-value="5">
      <i class="fa fa-star left" data-score="4.5"></i>
      <i class="fa fa-star right" data-score="5.0"></i>
    </span>
  </div>

  <input type="hidden" name="score" id="score" value="0">
  <div id="scoreText">0점</div>
</body>
